{#
/**
 * @file
 * Icon Macro
 *
 * You can create SVG sprite icons easily with this icon macro.
 *
 * Before you can use it in a template, you have to import it with this:
 * @code
 * {% import '@starter_theme/includes/icon.twig' as icon %}
 * @endcode
 *
 * If you need it within an another macro, import inside that macro.
 */
#}


{#
/**
 * SVG icon
 *
 * options:
 * - iconId   : name of icon (begin with `icon-`)
 * - className: additional CSS class
 * - size     : custom width and height of icon (skip for default width and height: 24px)
 *
 * @code
 * {{ icon.svg('icon-partner-volunteer', 'partner__icon') }}
 * {{ icon.svg('icon-download', 'c-button__icon', '15') }}
 * {{ icon.svg('icon-facebook', 'c-social__icon c-social--facebook', '40') }}
 * @endcode
 */
#}

{% macro svg(iconId, title, className, size) %}
  <svg
    class="c-icon {{ className }}"
    role="img"
    width="{{ size|default('24') }}px"
    height="{{ size|default('24') }}px">
    aria-label="{{ title }}">
    <desc>{{ title }}</desc>
    <use xlink:href="/{{ base_path ~ active_theme_path() ~ '/images/icons.svg#' ~ iconId }}"></use>
  </svg>
{% endmacro %}
